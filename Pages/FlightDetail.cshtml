@page "{country}"
@model india.ttlholidays.com.Pages.FlightDetailModel
@{
    ViewData["Title"] = @Model.Country;
}
 
<section class="flight_detail">
<div class="container py-5">
    <div class="row justify-content-center g-4">
        <!-- Left side - Deal box -->
        <div class="col-md-5">
            <div class="deal-box">
                <h5>TODAY'S BEST DEAL FOR </h5>
                    @Model.Country
                <p class="text-muted mb-1">Limited-Time Offer! ENDS Oct 05</p>
                <p>Up to 50% OFF vs Online Prices<br>Smart Fares from Real Travel Agents</p>
                <div class="price">
                    $465 <del>$765</del>
                </div>
                <p class="mt-2 text-secondary">All In | Round Trip</p>
                <a href="#" class="text-decoration-none">Trustpilot</a>
                <p class="small mt-3 mb-0">Trusted by 1 in 10 business flyers to Asia since 2002</p>
                <p class="fw-bold mt-2">Get Today's Best Fare - Talk to an Agent</p>
            </div>
        </div>

        <!-- Right side - Quote form -->
        <div class="col-md-5">
            <div class="quote-form">
                <div class="call-box mb-2">
                    <div>
                        <a href="tel:+16502631714">CALL 1-650-263-1714</a><br>
                        <small>Get EXTRA $30 with Code <b>ASAP30</b></small>
                    </div>
                    <i class="bi bi-telephone-fill fs-3 text-success"></i>
                </div>

                <form>
                    <div class="row g-2 mb-2">
                        <div class="mb-3 col-5">
                            <select class="form-select">
                                <option>Round Trip</option>
                                <option>One Way</option>
                                <option>Multi City</option>
                            </select>
                        </div>

                        <!-- Traveler dropdown -->
                        <div class="mb-3 col-7 traveler-dropdown">
                            <button type="button" class="form-control text-start" id="travelerBtn">
                                <i class="bi bi-person"></i> <span id="travelerText">1, Economy</span>
                            </button>

                            <div class="traveler-menu" id="travelerMenu">
                                <label class="fw-bold text-uppercase small text-secondary">Adults (12+)</label>
                                <div class="traveler-count">
                                    <button type="button" class="minus">-</button>
                                    <span id="adultCount">1</span>
                                    <button type="button" class="plus">+</button>
                                </div>

                                <label class="fw-bold text-uppercase small text-secondary">Children (2–12)</label>
                                <div class="traveler-count">
                                    <button type="button" class="minus">-</button>
                                    <span id="childCount">0</span>
                                    <button type="button" class="plus">+</button>
                                </div>

                                <label class="fw-bold text-uppercase small text-secondary">Infants (0–2)</label>
                                <div class="traveler-count">
                                    <button type="button" class="minus">-</button>
                                    <span id="infantCount">0</span>
                                    <button type="button" class="plus">+</button>
                                </div>

                                <hr>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="classType" id="eco" value="Economy" checked>
                                    <label class="form-check-label" for="eco">Economy</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="classType" id="premium" value="Premium Economy">
                                    <label class="form-check-label" for="premium">Premium Economy</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="classType" id="business" value="Business">
                                    <label class="form-check-label" for="business">Business</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="classType" id="first" value="First">
                                    <label class="form-check-label" for="first">First</label>
                                </div>
                                <button type="button" class="btn btn-outline-secondary w-100 mt-2" id="doneBtn">Done</button>
                            </div>
                        </div>
                    </div>
                        <div class="row g-2  mb-2">

                            <div class="col col-6">
                        <input type="text" class="form-control" placeholder="From *" required>
                    </div>

                            <div class="col col-6">
                        <input type="text" class="form-control" placeholder="To *" required>
                    </div>
                    </div>
                    <div class="row g-2 mb-2">
                        <div class="col">
                            <input type="text" class="form-control datepicker" placeholder="Depart Date" required>
                        </div>
                        <div class="col">
                            <input type="text" class="form-control datepicker" placeholder="Return Date" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <input type="email" class="form-control" placeholder="Email *" required>
                    </div>

                    <div class="mb-3">
                        <input type="tel" class="form-control" placeholder="Phone Number *" required>
                    </div>

                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Your Name (Optional)">
                    </div>

                    <button type="submit" class="btn btn-quote">GET A FREE QUOTE</button>
                </form> 
            </div>
        </div>
    </div>
</div>
</section>
