@page "{destination}"
@model india.ttlholidays.com.Pages.destinationModel
@{
    ViewData["Title"] = @Model.Pagetitle;
} 
<div class="breadcrumb-section" style="background-image:linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url(@Model.bgimage);">
    <div class="container">
        <div class="banner-content">
            <h1> @Model.Pagetitle</h1>
        </div>
    </div>
</div>
<div class="package-grid-page pt-50 mb-100">
    <div class="container"> 
        <div class="row"> 
            <div class="col-lg-12">

                <div class="list-grid-product-wrap mt-5">
                    <div class="row gy-md-5 gy-4">

                        @if (Model.CityRoot.ValueKind == System.Text.Json.JsonValueKind.Object)
                        { 
                            @foreach (var city in Model.CityRoot.EnumerateObject())
                            {
                                var CityData = city.Value;
                                var cityName = CityData.GetProperty("cityName").GetString();
                                var image = CityData.GetProperty("imagePath").GetString();
                                var pkg_count = CityData.GetProperty("pkg_count").GetInt32();
                                //var url = ""; 
                              //  var packagePrice = ""; 
                               // decimal packagePriceValue = 0;  
                                // var inclusion = PackageData.GetProperty("inclusion").GetString();
                                //var packageType = PackageData.GetProperty("packageType").GetString();
                                <div class="col-lg-4 col-md-6 wow animate fadeInDown" data-wow-delay="200ms" data-wow-duration="1500ms">
                                    <div class="package-card">
                                        <div class="package-img-wrap">
                                            <div class="swiper package-card-img-slider">
                                                <div class="swiper-wrapper">
                                                    <div class="swiper-slide">
                                                        <a asp-page="/packages" asp-route-cityname="@cityName" class="package-img">
                                                            <img src="@($"{image}")" alt="">
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="slider-pagi-wrap">
                                                <div class="package-card-img-pagi paginations"></div>
                                            </div>
                                             
                                        </div>
                                        <div class="package-content">
                                            <h5> <a asp-page="/packages" asp-route-cityname="@cityName">@cityName</a></h5>
                                            <div class="btn-and-price-area w-100">
                                                <a asp-page="/packages" asp-route-cityname="@cityName" class="primary-btn1">
